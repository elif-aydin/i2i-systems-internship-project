<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    tools:context="i2icell.i2ibenimle.activity.MainActivity"
    android:weightSum="1">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:src="@drawable/i2ilogo"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:text="i2i Benimle"
        android:textSize="25sp"
        android:textColor="#5AD427"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefon Numarası"
        android:textStyle="bold"
        android:textColor="#5AD427"
        android:id="@+id/TelefonNumarasi"
        android:layout_above="@+id/editTelefonNumarasi"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/editTelefonNumarasi"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="05xxxxxxxxx"
        android:maxLength="11"
        android:inputType="phone"
        android:textColorHint="#ccc"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/editSifre"
        android:layout_alignStart="@+id/editSifre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifre"
        android:id="@+id/textView"
        android:textColor="#5AD427"
        android:textStyle="bold"
        android:layout_above="@+id/editSifre"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editSifre"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:textColorHint="#cccccc"
        android:layout_above="@+id/butttonLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/butttonLogin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp"
        android:text="GİRİŞ"
        android:textColor="@android:color/black" />
</RelativeLayout>

